<% if new_object.persisted? %>
	<% id = 'edit_object'%>
	<% rest_method_class = 'rest_put' %>
<% else %>
	<% id = 'new_object'%>
	<% rest_method_class = 'rest_post' %>
<% end %>

<%= simple_form_for( new_object, :url => url,
      :method => :post , 
      :html => {:class => " prevent_double_submit ajax-form #{rest_method_class}  no_content_form",
        :id => "#{id}"}) do |f| %>

	 


  <%= f.input :employee_id  , :input_html => {:class => "input-xlarge "}, 
  			:label => "Karyawan" %>

 

  <div class="form-actions">
	
		<% if new_object.persisted? %>
			<%= f.button :submit , :class => "btn btn-primary", :value=> "Update Surat Jalan" %>
		<% else %>
			<%= f.button :submit , :class => "btn btn-primary", :value=> "Buat Surat Jalan" %>
		<% end %>
		
  </div>
<% end %>




<script type="text/javascript">
$(document).ready(function() {
	
	 $("#delivery_employee_id").tokenInput('<%=	search_employee_url %>', {
		prePopulate:   	[
				<% if not new_object.employee_id.nil? %> 
				{id: <%= new_object.employee_id %>, name: '<%= new_object.employee.name %>'}
				<% end %>
			],
		zindex: 9999,
		propertyToSearch: "name",
		tokenLimit: 1
	});
});
</script>