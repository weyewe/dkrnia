<% if new_object.persisted? %>
	<% id = 'edit_object'%>
	<% rest_method_class = 'rest_put' %>
<% else %>
	<% id = 'new_object'%>
	<% rest_method_class = 'rest_post' %>
<% end %>

<%= simple_form_for( new_object, :url => url,
      :method => :post , 
      :html => {:class => "form-horizontal prevent_double_submit ajax-form #{rest_method_class}  no_content_form",
        :id => "new_object"}) do |f| %>

	<%#= f.input :parent_id , :label => "Super Category" %>
 	

 	<%= hidden_field_tag 'item_id', "#{item_id}"%>
	<%= f.input :quantity , :label => "Quantity", :as => :string %>
	 

  <div class="form-actions">
    <%= f.button :submit , :class => "btn btn-primary", :value=> "Create Stock Migration" %>
  </div>
<% end %>

